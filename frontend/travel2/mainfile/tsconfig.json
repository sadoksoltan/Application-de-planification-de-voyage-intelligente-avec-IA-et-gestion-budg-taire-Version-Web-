{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    /* alias */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "assets/*": [
        "./src/assets/*"
      ],
      "images/*": [
        "./src/assets/images/*"
      ],
      "components/*": [
        "./src/components/*"
      ],
      "composables/*": [
        "./src/composables/*"
      ],
      "helpers/*": [
        "./src/helpers/*"
      ],
      "pages/*": [
        "./src/pages/*"
      ],
      "routes/*": [
        "./src/routes/*"
      ],
      "utilities/*": [
        "./src/utilities/*"
      ]
    },
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/*.js"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}